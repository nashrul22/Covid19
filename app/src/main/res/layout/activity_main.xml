<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gra"

    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gre"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Pendaftaran"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/namaDepan"
                        android:layout_width="210dp"
                        android:layout_height="match_parent"
                        android:hint="@string/nd"
                        android:inputType="textPersonName"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/namaBelakang"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/nb"
                        android:inputType="textPersonName"
                        android:textColor="@color/black" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="368dp"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/tempatLahir"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:hint="@string/tl"
                        android:inputType="textPersonName"
                        android:textColor="@color/black" />


                    <EditText
                        android:id="@+id/tanggalLahir"
                        android:layout_width="212dp"
                        android:layout_height="match_parent"
                        android:hint="@string/tl2"
                        android:inputType="date"
                        android:textColor="@color/black" />

                </LinearLayout>

                <EditText
                    android:id="@+id/alamat"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"

                    android:hint="@string/alamat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/jk" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/radioGroup1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >

                        <RadioButton
                            android:id="@+id/bttnLaki"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="@string/lk" />

                        <RadioButton
                            android:id="@+id/bttnPerempuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="@string/pr" />
                    </RadioGroup>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/ag" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TableRow android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <RadioGroup
                        android:id="@+id/radioGroup2"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:id="@+id/islam"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:checked="false"
                                    android:text="@string/is" />

                                <RadioButton
                                    android:id="@+id/katolik"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="false"
                                    android:text="@string/kt" />

                                <RadioButton
                                    android:id="@+id/budha"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="false"
                                    android:text="@string/bd" />

                                <RadioButton
                                    android:id="@+id/aliran"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="false"
                                    android:text="@string/ak" />
                            </RadioGroup>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:id="@+id/kristen"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="false"
                                    android:text="@string/kr" />

                                <RadioButton
                                    android:id="@+id/hindu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="false"
                                    android:text="@string/hd" />

                                <RadioButton
                                    android:id="@+id/konghucu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="false"
                                    android:text="@string/kh" />
                            </RadioGroup>
                        </LinearLayout>
                    </RadioGroup>
</TableRow>
                </LinearLayout>

                <EditText
                    android:id="@+id/telepon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/tlp"
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints=""

                    android:hint="@string/email" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="5dp"
                    app:passwordToggleEnabled="true">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="@string/Ps"
                        android:ems="10"
                        android:hint="@string/Ps"
                        android:inputType="textPassword" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="5dp"
                    app:passwordToggleEnabled="true">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passReturn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="@string/Ps"
                        android:ems="10"
                        android:hint="@string/rt"
                        android:inputType="textPassword" />

                </com.google.android.material.textfield.TextInputLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/kembali"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"

                        android:background="@drawable/custom2"
                        android:text="@string/kembali" />

                    <Button
                        android:id="@+id/daftar"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"

                        android:background="@drawable/custom2"
                        android:text="@string/daftar" />
                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>